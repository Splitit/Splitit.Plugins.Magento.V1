<?xml version="1.0"?>
<config>
    <modules>
        <PayItSimple_Payment>
            <version>2.0.1</version>
        </PayItSimple_Payment>
    </modules>
    <frontend>
        <routers>
            <payitsimple>
                <use>standard</use>
                <args>
                    <module>PayItSimple_Payment</module>
                    <frontName>payitsimple</frontName>
                </args>
            </payitsimple>
        </routers>
        <layout>
            <updates>
                <payitsimple>
                    <file>pis_payment.xml</file>
                </payitsimple>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <sip_payment_splitprice>
                        <type>model</type>
                        <class>pis_payment/observer</class>
                        <method>insertBlock</method>
                    </sip_payment_splitprice>
                </observers>
            </core_block_abstract_to_html_before>
            <payment_method_is_active>
                <observers>
                    <sip_payment_payment_method_is_active>
                        <type>singleton</type>
                        <class>pis_payment/observer</class>
                        <method>paymentMethodIsActive</method>
                    </sip_payment_payment_method_is_active>
                </observers>
            </payment_method_is_active>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <payitsimple after="Mage_Adminhtml">PayItSimple_Payment</payitsimple>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <pis_notification>
                    <file>payitsimple_notification.xml</file>
                </pis_notification>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <installments_no>
                    <to_order_payment>*</to_order_payment>
                </installments_no>
            </sales_convert_quote_payment>
        </fieldsets>
        <models>
            
            <pis_payment>
                <class>PayItSimple_Payment_Model</class>
                <resourceModel>pis_payment_mysql4</resourceModel>
            </pis_payment>
            <pis_payment_mysql4>
                <class>PayItSimple_Payment_Model_Mysql4</class>
                <entities>
                    <pis_payment>
                        <table>pis_payment</table>
                    </pis_payment>
                </entities>
            </pis_payment_mysql4>
        </models>
        <resources>
            <pis_payment_setup>
                <setup>
                    <module>PayItSimple_Payment</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pis_payment_setup>
            <pis_payment_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pis_payment_write>
            <pis_payment_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pis_payment_read>
        </resources>
        <blocks>
            <pis_payment>
                <class>PayItSimple_Payment_Block</class>
            </pis_payment>
        </blocks>
        <helpers>
            <pis_payment>
                <class>PayItSimple_Payment_Helper</class>
            </pis_payment>
        </helpers>
    </global>
    <default>
        <payment>
            <pis_cc>
                <active>0</active>
                <model>pis_payment/pisMethod</model>
                <order_status>processing</order_status>
                <payment_action>authorize</payment_action>
                <title>Monthly payments - 0% Interest</title>
                <faq_link_enabled>1</faq_link_enabled>
                <faq_link_title>Tell me more</faq_link_title>
                <api_url>https://web-api.splitit.com/</api_url>
                <api_url_sandbox>https://web-api-sandbox.splitit.com/</api_url_sandbox>
                <sandbox_flag>0</sandbox_flag>
                <debug>0</debug>
                <cctypes>MC,VI</cctypes>
                <allowspecific>0</allowspecific>
                <specificcountry>US</specificcountry>
                <centinel>0</centinel>
                <useccv>1</useccv>
                <centinel_is_mode_strict>0</centinel_is_mode_strict>
                <installment_price_text>No interest</installment_price_text>
            </pis_cc>
        </payment>
    </default>
    <phpunit>
        <suite>
            <modules>
                <PayItSimple_Payment/>
            </modules>
        </suite>
    </phpunit>
</config>